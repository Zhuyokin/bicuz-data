    "@pinia-plugin-persistedstate/nuxt": "^1.2.0",
    "@pinia/nuxt": "^0.5.1",
    "@unocss/eslint-config": "^0.60.2",
    "@unocss/nuxt": "^0.60.2",
    "@vant/nuxt": "^1.0.4",
    "@vite-pwa/nuxt": "^0.7.0",
    "@vueuse/nuxt": "^10.9.0",
    "cnjm-postcss-px-to-viewport": "^1.0.1",
    "consola": "^3.2.3",
    "cos-js-sdk-v5": "^1.8.0",
    "czg": "^1.9.2",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.1",
    "js-md5": "^0.8.3",
    "libpag": "^4.2.84",
    "lint-staged": "^15.2.5",
    "lottie-web": "^5.12.2",
    "moment": "^2.30.1",
    "nuxt": "^3.11.2",
    "nuxt-lodash": "^2.5.3",
    "nuxt-swiper": "^1.2.2",
    "picocolors": "^1.0.1",
    "pinia": "^2.1.7",
    "postcss-px-to-viewport-8-plugin": "^1.2.5",
    "sass": "^1.77.1",
    "simple-git-hooks": "^2.11.1",
    "svga": "^2.1.1",
    "svgaplayerweb": "^2.3.2",
    "swiper": "^11.1.3",
    "typescript": "^5.4.5",
    "vant": "^4.9.0",
    "video-animation-player": "^1.0.5",
    "vite-plugin-compression": "^0.5.1",
    "vue-tsc": "^2.0.19"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
