{
  "type": "module",
  "private": true,
  "scripts": {
    "dev:pwa": "VITE_PLUGIN_PWA=true nuxi dev",
    "dev": "nuxi dev",
    "dev.test": "nuxi dev --mode test",
    "dev.pre": "nuxi dev --mode pre",
    "dev.prod": "nuxi dev --mode production",
    "build": "nuxi build",
    "build.test": "nuxi build --mode test",
    "build.pre": "nuxi build --mode pre",
    "build.prod": "nuxi build --mode production",
    "generate": "nuxi generate",
    "start": "PORT=3001 node .output/server/index.mjs",
